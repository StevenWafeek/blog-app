<div class="wrapper">
  <div class="userNameWrapper">
    <div><img alt="Profile P."/></div>
    <div class="userName">
      <h2> Name: <%= @user.name %></h2>
      <h6>Number of posts: <%= @user.posts.count %></h6>
    </div>
  </div>

  <div class="bio">
    <h3>Bio:</h3>
    <p><%= @user.bio %></p>
  </div>

  <% @user.recent_posts.each_with_index do |post, index| %>
    <div class="post" style="<%= index >= 3 ? 'display:none' : '' %>">
      <h3><%= link_to "Post ##{index + 1}", user_post_path(@user, post), class: 'user-link' %></h3>
      <% words = post.text.split %>
      <% if words.length <= 18 %>
        <p><%= post.text %></p>
      <% else %>
        <p><%= words.take(18).join(' ') %>...</p>
      <% end %>
      <div class="count">
        Comments: <%= post.comments.count %> &nbsp;&nbsp;
        Likes: <%= post.likes.count %>
      </div>
    </div>
  <% end %>

  <div class="button">
    <%= link_to 'See all posts', user_posts_path(@user), id: 'all-posts-link' %>
  </div>
</div>

